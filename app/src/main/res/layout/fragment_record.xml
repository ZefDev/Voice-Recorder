<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecordFragment">
    <ImageView
        android:id="@+id/recorder_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/home_illustration"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/record_filename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/press_the_micro_button"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintTop_toBottomOf="@id/recorder_header_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textSize="18dp"
        android:lineHeight="32dp"
        android:textColor="@color/colorDarkBlue"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        />

    <Chronometer
        android:id="@+id/record_timer"
        app:layout_constraintTop_toBottomOf="@id/record_filename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        app:fontFamily="@font/open_sans_light"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkBlue"
        android:textSize="32dp"
        android:layout_marginTop="64dp"
        />
    <ImageButton
        android:id="@+id/record_btn"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/record_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/record_btn_stopped"
        />
    <ImageButton
        android:background="@android:color/white"
        android:id="@+id/record_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/record_btn"
        app:layout_constraintBottom_toTopOf="@id/record_btn"
        app:layout_constraintStart_toEndOf="@id/record_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/recorder_list_btn"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>